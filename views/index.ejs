<!DOCTYPE html>
<html>
  <head>
    <title>Contacts</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/style.css">
    <script type="text/javascript" src="/script.js"></script>
  </head>
  <body>
    <div class="container">
      <div id="header" class="row">
        <div class="col-md-1" id="home">Home</div>
        <div class="col-md-3" id="search"><input id="searchbar" type="search" placeholder="search"></input></div>
        <div class="col-md-2" id="new_contact"><a href="#">New Contact</a></div>
      </div>
      <div class="row contact-list">
        <h1>Contacts</h1>
        <div class="col-md-12">
        <% contacts.forEach(function(contact){ %>
          <div>
            <%= contact.name %>
            <a id="delete">X</a>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
